# LegoCity Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Gateway (JWT Authentication)
# =============================================================================
# Secret key for JWT token verification
JWT_SECRET=your-secret-key-here

# Trusted IP that bypasses authentication (for internal services)
# Leave empty to require JWT for all requests
TRUSTED_IP=

# =============================================================================
# Dashboard (PayloadCMS + Next.js)
# =============================================================================
# Secret for Payload CMS encryption
PAYLOAD_SECRET=your-payload-secret-here

# Public URL of the dashboard (used for links, CORS, etc.)
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# =============================================================================
# Optional: AI Features
# =============================================================================
# OpenAI API key for AI-powered features
# OPENAI_API_KEY=sk-...

# OpenRouter API key (alternative to OpenAI)
# OPENROUTER_API_KEY=sk-or-...
